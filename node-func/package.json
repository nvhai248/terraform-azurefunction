    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "drizzle-kit drop --url=\"$DATABASE_URL\""
  },
  "dependencies": {
    "@azure/functions": "^4.7.3",
    "@supabase/supabase-js": "^2.57.4",
    "date-fns": "^4.1.0",
