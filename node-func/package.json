{
  "name": "microleap",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build && npm run db:generate",
    "start": "func start",
    "test": "echo \"No tests yet...\"",
    "db:generate": "drizzle-kit generate",
