    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.29.0"
  },
  "devDependencies": {
    "@types/node": "24.x",
    "azure-functions-core-tools": "^4.x",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
